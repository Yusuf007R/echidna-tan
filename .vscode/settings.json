{
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": "file:///home/yusuf/code/echidna-tan/.github/workflows/deploy.yml"
  },
  "editor.defaultFormatter": "biomejs.biome",
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "never",
    "source.sortImports": "never",
    "source.fixAll.biome": "explicit"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"  
  },

  "biome.configurationPath": "./bot/biome.json",
  "biome.lsp.bin": "./bot/node_modules/.bin/biome",
  "biome.suggestInstallingGlobally": true,
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
}